pragma solidity 0.8.24;


interface IFlashLoanReceiver {
    function executeOperation(address token, uint256 amount, uint256 feeAmount, uint256 totalAmount) external;
}

interface IVesting {
    function fundAndOrActivate(
        uint256 _amount
    )
    external;
}

contract FlashLoan is Ownable {
    address public tokenAddress;
    uint256 public fee;
    uint256 public totalCollectedFeeAmount;
    uint256 public vestingAmount;
    uint256 public trashHold = 50 ether;

    constructor(address _tokenAddress, uint256 _fee)
    Ownable(msg.sender) {
        tokenAddress = _tokenAddress;
        fee = _fee;
    }

    event LoanExecuted(address borrower, uint256 amount);

    function setFee(uint256 _fee) external onlyOwner {
        fee = _fee;
    }

    function executeFlashLoan(uint256 amount, uint256 expected_earnings) external {
        IERC20 token = IERC20(tokenAddress);
        uint256 initialBalance = token.balanceOf(address(this));
        require(initialBalance >= amount, "Insufficient balance in contract");

        // Transfer tokens to the borrower
        require(token.transfer(msg.sender, amount), "Token transfer failed");

        // Call the borrower's function
        uint256 feeAmount = ((expected_earnings * fee) / 100);
        uint256 totalAmount = amount + feeAmount;
        IFlashLoanReceiver(msg.sender).executeOperation(tokenAddress, amount, feeAmount, totalAmount);

        // Check the balance after the operation
        uint256 finalBalance = token.balanceOf(address(this));
        require(finalBalance >= initialBalance + fee, "Flash loan hasn't been paid back");
        totalCollectedFeeAmount += feeAmount / 2;
        vestingAmount += feeAmount / 2;

        emit LoanExecuted(msg.sender, amount);
    }

    function availableBalanceToBorrow() external view returns(uint256) {
        return IERC20(tokenAddress).balanceOf(address(this));
    }

    function transferVestingAmount(address vestingFarm) external {
        IVesting(vestingFarm).fundAndOrActivate(vestingAmount);
    }
}
